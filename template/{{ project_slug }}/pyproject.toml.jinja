[build-system]
requires = ["hatchling"]
build-backend = 'hatchling.build'

[project]
name = "{{ project_slug }}"
description = "{{ description }}"
readme = "README.md"
authors = [
    { name = "{{ full_name }}", email = "{{ email }}" },
]
classifiers = [
    "Development Status :: 3 - Alpha",
    "License :: OSI Approved :: MIT License",
    "Intended Audience :: Developers",
    "Natural Language :: English",
    "Operating System :: OS Independent",
    "Programming Language :: Python :: 3 :: Only",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.8",
    "Programming Language :: Python :: 3.9",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
]
license = "MIT"
requires-python = ">=3.8"
{% if cli -%}
dependencies = [
    "typer>=0.9.0,<0.10.0",
    "rich>=13.0.0,<14.0.0",
]
{% else -%}
dependencies = []
{% endif -%}
optional-dependencies = {}
dynamic = ["version"]

[project.urls]
Homepage = "https://github.com/{{ github }}/{{ project_slug }}"
Source = "https://github.com/{{ github }}/{{ project_slug }}"
Twitter = "https://twitter.com/{{ twitter }}"
Funding = "https://github.com/sponsors/{{ github }}"
{% if cli %}
[project.scripts]
{{ project_slug }} = "{{ package }}.__main__:app"
{% endif %}
[tool.hatch.version]
path = "{{ package }}/__init__.py"

[tool.hatch.envs.default]
dependencies = ["bpython", "black", "ruff", "mypy", "pre-commit"]

[tool.hatch.envs.default.scripts]
lint = ["black --check --diff {args:.}", "ruff check {args:.}", "mypy {args:.}"]
format = ["black {args:.}", "ruff --fix --exit-non-zero-on-fix {args:.}"]

[tool.hatch.envs.test]
dependencies = ["coverage[toml]", "pytest", "pytest-sugar", "dirty-equals"]
scripts.run = "coverage run -m pytest"
scripts.report = "coverage report"

[[tool.hatch.envs.test.matrix]]
python = ["3.8", "3.9", "3.10", "3.11"]

[tool.hatch.envs.docs]
dependencies = ["mkdocs", "mkdocs-material"]
scripts.build = "mkdocs build --clean --strict"
scripts.serve = "mkdocs serve --dev-addr localhost:8000"

[tool.mypy]
strict = true

[tool.black]
target-version = ["py38"]

[tool.pytest.ini_options]
addopts = ["--strict-config", "--strict-markers"]
filterwarnings = ["error"]

[tool.coverage.run]
source_pkgs = ["{{ package }}", "tests"]

[tool.coverage.report]
show_missing = true
skip_covered = true
